@{
}
@using CoreSRT.Models.ViewModels
@model CustomerViewModel

<p align="center"> <b>Create New Item</b> </p>

<div>
    <p>
        @using (Html.BeginForm("Create", "Customer", FormMethod.Post))
        {

            <table class="table">
                <tr>
                    <td>
                        <div class="table-cell">
                            @Html.Label("Name")
                        </div>
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Name)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.Label("GSTNo")
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.GSTNo)
                    </td>
                <tr>
                <tr>
                    <td>
                        @Html.Label("ContactNumber")
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.ContactNumber)

                    </td>
                <tr>
                    <td>
                        @Html.Label("Address")
                    </td>
                    <td>
                        @Html.TextAreaFor(m => m.Address)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.Label("EmailId")
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.EmailId)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.Label("Type")
                    </td>
                    <td>
                        @Html.DropDownListFor(m => m.TypeId, new SelectList(Model.Types, "TypeId", "Type"),
                    "Select Type")
                        @Html.ValidationMessageFor(m => m.TypeId, "Please select Type")
                    </td>
                </tr>
                <tr></tr>
            </table>
            <input type="submit" value="Save" class="btn btn-default" />
        }
        <br>
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>
