@using CoreSRT.Models.ViewModels
@model ItemViewModel
<div>
    <script>function radioClick(val)
        {
            $('#CGST').val(val);
            $('#SGST').val(val);
            $('#hiCGST').val(val);
           $('#hiSGST').val(val);
        }</script>
    <p align="center"> <b>Edit New Item</b> </p>
</div>

<div>
    <p>
        @using (Html.BeginForm("Edit", "Items", FormMethod.Post))
        {

            <table class="table">
                <tr>
                    <td>
                        <div class="table-cell">
                            @Html.Label("Description")
                        </div>
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Description)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.Label("Rate")
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Rate)
                    </td>
                <tr>
                    <td>
        <p>Choose GST Slab </p>
        <div class="cell">
            <input type="radio" name="radioGst" value="0" onclick="radioClick(0)" /> 0
            <input type="radio" name="radioGst" value="5" onclick="radioClick(5)" />  5
            <input type="radio" name="radioGst" value="12" onclick="radioClick(12)" />  12
            <input type="radio" name="radioGst" value="18" onclick="radioClick(18)" />  18
            <input type="radio" name="radioGst" value="28" onclick="radioClick(28)" />  28
        </div>
        </td>
        </tr>
        <tr>
            <td>
                @Html.Label("CGST")
            </td>
            <td>
                <input asp-for="CGST" type="text" hidden="hidden" />
                <input type="text" id="hiCGST" readonly="readonly" value=@Model.CGST>
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("SGCT")
            </td>
            <td>
                <input asp-for="SGST" type="text" hidden="hidden" />
                <input type="text" id="hiSGST" readonly="readonly" value=@Model.SGST>
            </td>
        </tr>
        <tr></tr>
        </table>
        <input asp-for="Id" value=@Model.Id type="hidden">
        <input type="submit" value="Save" class="btn btn-default" />
    }
        <br>
        @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
